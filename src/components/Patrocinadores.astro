<astro>
    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
</astro>

<div class="glide overflow-hidden m-12">
    <div class="glide__track" data-glide-el="track">
        <div class="glide__slides flex">
            <div class="glide__slide flex justify-center">
                <div
                    class="lg:h-40 lg:w-40 h-20 w-20 rounded-lg flex justify-center items-center"
                >
                    <img
                        alt="Patrocinador TATZ AGENCY"
                        src="/imgPatrocinadores/TATZAGENCY.webp"
                        class="object-cover h-full w-full"
                    />
                </div>
            </div>
            <div class="glide__slide flex justify-center">
                <div
                    class="lg:h-40 lg:w-40 h-20 w-20 rounded-lg flex justify-center items-center"
                >
                    <img
                        alt="Patrocinador EFNE"
                        src="/imgPatrocinadores/EFNE.webp"
                        class="object-cover h-full w-full"
                    />
                </div>
            </div>
            <div class="glide__slide flex justify-center">
                <div
                    class="lg:h-40 lg:w-60 h-16 w-32 rounded-lg flex justify-center items-center"
                >
                    <img
                        alt="Patrocinador Angela Diaz"
                        src="/imgPatrocinadores/AngelaDiaz.webp"
                        class="object-cover h-full w-full"
                    />
                </div>
            </div>
            <div class="glide__slide flex justify-center">
                <div
                    class="lg:h-40 lg:w-60 h-16 w-32 rounded-lg flex justify-center items-center"
                >
                    <img
                        alt="Patrocinador HARBIZ"
                        src="/imgPatrocinadores/HARBIZ.webp"
                        class="object-cover h-full w-full"
                    />
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("astro:page-load", function () {
        // @ts-ignore
        new Glide(".glide", {
            type: "carousel",
            startAt: 0,
            perView: 4,
            gap: 1,
            autoplay: 2000, // Cambiar a la velocidad de movimiento deseada en milisegundos (en este caso, cada 2 segundos)
            hoverpause: true, // Pausar el carrusel cuando se pasa el cursor sobre él
            animationDuration: 1000, // Duración de la animación en milisegundos (en este caso, 0.5 segundos)
            breakpoints: {
                1024: {
                    perView: 3,
                },
                600: {
                    perView: 2,
                },
            },
        }).mount();
    });
</script>
