---
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import "@fontsource-variable/onest";
import BotonFlotanteArriba from "../components/BotonFlotanteArriba.astro";

interface Props {
	title: string;
	description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="{description}" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/webp" href="/logos/logo-black.webp" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Nav />
		<slot />
		<BotonFlotanteArriba />
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		/*color-scheme: light dark; /*Decir los colores al navegador que soportamos*/
	}
	html {
		font-family: "Onest Variable", sans-serif;
		background-color: white;
		overflow: hidden;
	}
</style>
