---
import { ViewTransitions } from "astro:transitions";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import "@fontsource-variable/onest";
import BotonFlotanteArriba from "../components/BotonFlotanteArriba.astro";

interface Props {
	title: string;
	description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<ViewTransitions />
		<meta charset="UTF-8" />
		<meta name="description" content="Cambia tu f√≠sico desde casa!üè°" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/webp" href="/logo.webp" />
		<link
			href="https://cdn.jsdelivr.net/npm/keen-slider@6.8.6/keen-slider.min.css"
			rel="stylesheet"
		/>
		<link
			href="https://unpkg.com/aos@2.3.1/dist/aos.css"
			rel="stylesheet"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Nav />
		<slot />
		<BotonFlotanteArriba />
		<Footer />
		<style is:global>
			:root {
				/*color-scheme: light dark; /*Decir los colores al navegador que soportamos*/
			}
			html {
				font-family: "Onest Variable", sans-serif;
				background-color: white;
			}
			/* Estilos para cambiar el color del scrollbar */
			/* Para navegadores basados en WebKit */
			::-webkit-scrollbar {
				width: 12px; /* Ancho del scrollbar */
			}

			/* Fondo del scrollbar */
			::-webkit-scrollbar-track {
				background-color: #f1f1f1; /* Color de fondo del scrollbar */
			}

			/* Color de la barra del scrollbar */
			::-webkit-scrollbar-thumb {
				background-color: #029cd6; /* Color de la barra del scrollbar */
				border-radius: 6px; /* Radio de borde de la barra del scrollbar */
			}

			/* Cambiar el color de la barra del scrollbar cuando se desplaza */
			::-webkit-scrollbar-thumb:hover {
				background-color: #0056b3; /* Color de la barra del scrollbar al pasar el rat√≥n sobre ella */
			}

			/*FadeInDown*/
			@-webkit-keyframes fadeInDown {
				from {
					opacity: 0;
					-webkit-transform: translate3d(0, -100%, 0);
					transform: translate3d(0, -100%, 0);
				}

				to {
					opacity: 1;
					-webkit-transform: translate3d(0, 0, 0);
					transform: translate3d(0, 0, 0);
				}
			}

			@-moz-keyframes fadeInDown {
				from {
					opacity: 0;
					-moz-transform: translate3d(0, -100%, 0);
					transform: translate3d(0, -100%, 0);
				}

				to {
					opacity: 1;
					-moz-transform: translate3d(0, 0, 0);
					transform: translate3d(0, 0, 0);
				}
			}

			@keyframes fadeInDown {
				from {
					opacity: 0;
					-webkit-transform: translate3d(0, -100%, 0);
					-ms-transform: translate3d(0, -100%, 0);
					transform: translate3d(0, -100%, 0);
				}

				to {
					opacity: 1;
					-webkit-transform: translate3d(0, 0, 0);
					-ms-transform: translate3d(0, 0, 0);
					transform: translate3d(0, 0, 0);
				}
			}

			.fadeInDown {
				-webkit-animation-name: fadeInDown;
				animation-name: fadeInDown;
			}

			/*fadeInUp*/
			@-webkit-keyframes fadeInUp {
				from {
					opacity: 0;
					-webkit-transform: translate3d(0, 100%, 0);
					transform: translate3d(0, 100%, 0);
				}

				to {
					opacity: 1;
					-webkit-transform: translate3d(0, 0, 0);
					transform: translate3d(0, 0, 0);
				}
			}

			@-moz-keyframes fadeInUp {
				from {
					opacity: 0;
					-moz-transform: translate3d(0, 100%, 0);
					transform: translate3d(0, 100%, 0);
				}

				to {
					opacity: 1;
					-moz-transform: translate3d(0, 0, 0);
					transform: translate3d(0, 0, 0);
				}
			}

			@keyframes fadeInUp {
				from {
					opacity: 0;
					-webkit-transform: translate3d(0, 100%, 0);
					-ms-transform: translate3d(0, 100%, 0);
					transform: translate3d(0, 100%, 0);
				}

				to {
					opacity: 1;
					-webkit-transform: translate3d(0, 0, 0);
					-ms-transform: translate3d(0, 0, 0);
					transform: translate3d(0, 0, 0);
				}
			}

			.fadeInUp {
				-webkit-animation-name: fadeInUp;
				animation-name: fadeInUp;
			}

			/*fadeInRight*/
			@-webkit-keyframes fadeInRight {
				from {
					opacity: 0;
					-webkit-transform: translate3d(100%, 0, 0);
					transform: translate3d(100%, 0, 0);
				}

				to {
					opacity: 1;
					-webkit-transform: translate3d(0, 0, 0);
					transform: translate3d(0, 0, 0);
				}
			}

			@-moz-keyframes fadeInRight {
				from {
					opacity: 0;
					-moz-transform: translate3d(100%, 0, 0);
					transform: translate3d(100%, 0, 0);
				}

				to {
					opacity: 1;
					-moz-transform: translate3d(0, 0, 0);
					transform: translate3d(0, 0, 0);
				}
			}

			@keyframes fadeInRight {
				from {
					opacity: 0;
					-webkit-transform: translate3d(100%, 0, 0);
					-ms-transform: translate3d(100%, 0, 0);
					transform: translate3d(100%, 0, 0);
				}

				to {
					opacity: 1;
					-webkit-transform: translate3d(0, 0, 0);
					-ms-transform: translate3d(0, 0, 0);
					transform: translate3d(0, 0, 0);
				}
			}

			.fadeInRight {
				-webkit-animation-name: fadeInRight;
				animation-name: fadeInRight;
			}

			.animated {
				-webkit-animation-duration: 1s;
				animation-duration: 1s;
				-webkit-animation-fill-mode: both;
				animation-fill-mode: both;
			}

			/*fadeInLeft*/
			@-webkit-keyframes fadeInLeft {
				from {
					opacity: 0;
					-webkit-transform: translate3d(-100%, 0, 0);
					transform: translate3d(-100%, 0, 0);
				}

				to {
					opacity: 1;
					-webkit-transform: translate3d(0, 0, 0);
					transform: translate3d(0, 0, 0);
				}
			}

			@-moz-keyframes fadeInLeft {
				from {
					opacity: 0;
					-moz-transform: translate3d(-100%, 0, 0);
					transform: translate3d(-100%, 0, 0);
				}

				to {
					opacity: 1;
					-moz-transform: translate3d(0, 0, 0);
					transform: translate3d(0, 0, 0);
				}
			}

			@keyframes fadeInLeft {
				from {
					opacity: 0;
					-webkit-transform: translate3d(-100%, 0, 0);
					-ms-transform: translate3d(-100%, 0, 0);
					transform: translate3d(-100%, 0, 0);
				}

				to {
					opacity: 1;
					-webkit-transform: translate3d(0, 0, 0);
					-ms-transform: translate3d(0, 0, 0);
					transform: translate3d(0, 0, 0);
				}
			}
		</style>
		<script is:inline src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
		<script type="module">
		  document.addEventListener("astro:page-load", function () {
			// Inicializar AOS despu√©s de que la p√°gina se haya cargado completamente
			AOS.init();
		  });
		</script>
	</body>
</html>
